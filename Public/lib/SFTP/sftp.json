{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmCount": {
            "type": "int"
        },
        "vnetResourceGroup": {
            "type": "string"
        },
        "virtualNetwork": {
            "type": "string"
        },
        "sftp_subnetRef": {
            "type": "string"
        },
        "networkInterfaceName": {
            "type": "string"
        },
        "networkSecurityGroupName": {
            "type": "string"
        },
        "virtualMachineName": {
            "type": "string"
        },
        "osDiskName": {
            "type": "string"
        },
        "storageAccountType": {
            "type": "string"
        },
        "virtualMachineSize": {
            "type": "string"
        },
        "uai": {
            "type": "string"
        },
        "SupportEmail": {
            "type": "string"
        },
        "Environment_Category": {
            "type": "string"
        },
        "domainName": {
            "type": "string"
        },
        "DomainAdminUserName": {
            "type": "string"
        },
        "DomainAdminPassword": {
            "type": "securestring"
        },
        "omsWorkspaceResourceGroup": {
            "type": "string"
        },
        "omsWorkspaceName": {
            "type": "string"
        },
        "sftpCustom_ScriptFilePath": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[concat(parameters('networkInterfaceName'), copyindex(8))]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "nicLoop",
                "count": "[parameters('vmCount')]"
            },
            "dependsOn": [],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('vnetResourceGroup'),'/providers/Microsoft.Network/virtualNetworks/',parameters('virtualNetwork'),'/subnets/',parameters('sftp_subnetRef'))]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]"
                }
            },
            "tags": {}
        },
        {
            "name": "[concat(parameters('virtualmachineName'), copyIndex(8))]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-06-01",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "vmloop",
                "count": "[parameters('vmCount')]"
            },
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', concat(parameters('networkInterfaceName'), copyindex(8)))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "name": "[concat(parameters('osDiskName'), copyIndex(8))]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('StorageAccountType')]"
                        }
                    },
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',resourcegroup().name,'/providers/Microsoft.Network/networkInterfaces/',concat(parameters('networkInterfaceName'), copyindex(8)))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[concat(parameters('virtualmachineName'), copyIndex(8))]",
                    "adminUsername": "[parameters('DomainAdminUserName')]",
                    "adminPassword": "[parameters('DomainAdminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVmAgent": true
                    }
                }
            },
            "tags": {
                "ApplicationName": "EMS",
                "uai": "[parameters('uai')]",
                "SupportEmail": "[parameters('SupportEmail')]",
                "env": "[parameters('Environment_Category')]"
            },
            "resources": [
                {
                    "type": "extensions",
                    "name": "customscripts",
                    "apiVersion": "2015-06-15",
                    "location": "[resourcegroup().location]",
                    "dependson": [
                        "[concat(parameters('virtualmachineName'), copyIndex(8))]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.9",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "[parameters('sftpCustom_ScriptFilePath')]"
                            ]
                        }
                    }
                },
                {
                    "type": "extensions",
                    "name": "domainJoin",
                    "location": "[resourceGroup().location]",
                    "apiVersion": "2015-06-15",
                    "dependson": [
                        "[concat(parameters('virtualmachineName'), copyIndex(8))]",
                        "customscripts"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "JsonADDomainExtension",
                        "typeHandlerVersion": "1.3",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "Name": "[parameters('domainName')]",
                            "OUPath": "",
                            "User": "[concat(parameters('domainName'), '\\', parameters('DomainAdminUserName'))]",
                            "Restart": "true",
                            "Options": "3"
                        },
                        "protectedSettings": {
                            "Password": "[parameters('DomainAdminPassword')]"
                        }
                    }
                },
                {
                    "type": "extensions",
                    "name": "logAnalytics",
                    "apiVersion": "2015-06-15",
                    "location": "[resourcegroup().location]",
                    "dependson": [
                        "[concat(parameters('virtualmachineName'), copyIndex(8))]",
                        "domainJoin"
                    ],
                    "properties": {
                        "publisher": "Microsoft.EnterpriseCloud.Monitoring",
                        "type": "MicrosoftMonitoringAgent",
                        "typeHandlerVersion": "1.0",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "workspaceId": "[reference(resourceId(parameters('omsWorkspaceResourceGroup'),'Microsoft.OperationalInsights/workspaces/', parameters('omsWorkspaceName')), '2015-03-20').customerId]"
                        },
                        "protectedSettings": {
                            "workspaceKey": "[listKeys(resourceId(parameters('omsWorkspaceResourceGroup'),'Microsoft.OperationalInsights/workspaces/', parameters('omsWorkspaceName')), '2015-03-20').primarySharedKey]"
                        }
                    }
                }
            ]
        }
    ]
}
