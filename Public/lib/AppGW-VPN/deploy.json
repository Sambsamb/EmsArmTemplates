{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ApplicationName": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars e.g. nxt (Next Net), ems"
            },
            "defaultValue": ""
        },
        "SupportEmail": {
            "type": "string"
        },
        "shortLocation": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars. E.g. East US - EU, West US - WU, East US 2 - EU2"
            },
            "defaultValue": ""
        },
        "Environment_Category": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 char. E.g.  DEV, QA, UAT and PRD"
            },
            "defaultValue": ""
        },
        "Tenant": {
            "type": "string",
            "maxLength": 5,
            "metadata": {
                "description": "3 char. E.g.  SRD"
            },
            "defaultValue": ""
        },
        "keyVaultResourceGroup": {
            "type": "string"
        },
        "keyvaultName": {
            "type": "string"
        },
        "appGW_tier": {
            "type": "string"
        },
        "appGW_Size": {
            "type": "string"
        },
        "appGW_capacity": {
            "type": "int"
        },
        "appGW_backendIPAddresses": {
            "type": "string"
        },
        "secretName_appGW-certData": {
            "type": "string"
        },
        "secretName_certPassword": {
            "type": "string"
        },
        "subnet_Names": {
            "type": "object"
        },
        "vpnConnection": {
            "type": "string",
            "defaultValue": "Vpn",
            "allowedValues": [
                "Vpn",
                "ExpressRoute"
            ]
        },
        "vpnType": {
            "type": "string",
            "defaultValue": "RouteBased",
            "allowedValues": [
                "RouteBased",
                "PolicyBased"
            ]
        },
        "artifacts_baseUri": {
            "type": "string"
        }
    },
    "variables": {
        "vpnSku": "VpnGw1",
        "appGW_domainNameLabel": "emsappgw",
        "appGW_publicIpAddressName": "emsappgwpip",
        "vpnPublicIpAddress": "emsvpnpip",
        "resourceNames": {
            "commonResourceGroup": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('Tenant'),'-01'))]",
            "virtualNetwork": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-net-',parameters('shortLocation'),'-001'))]",
            "applicationGateway": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('Tenant'),'-',parameters('shortLocation'),'-001'))]",
            "vpn": "[tolower(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-vpn-',parameters('shortLocation'),'-',parameters('Tenant'),'-00'))]"
        },
        "TemplateURLs": {
            "appGW": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AppGW-VPN/linkedTemplates/appGW.json')]",
            "vpn": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AppGW-VPN/linkedTemplates/vpn.json')]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "resourcegroup": "[variables('resourceNames').commonResourceGroup]",
            "name": "applicationGateway",
            "apiVersion": "2018-05-01",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').appGW]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetwork": {
                        "value": "[variables('resourceNames').virtualNetwork]"
                    },
                    "appGW_Name": {
                        "value": "[variables('resourceNames').applicationGateway]"
                    },
                    "appGW_domainNameLabel": {
                        "value": "[variables('appGW_domainNameLabel')]"
                    },
                    "appGW_tier": {
                        "value": "[parameters('appGW_tier')]"
                    },
                    "appGW_Size": {
                        "value": "[parameters('appGW_Size')]"
                    },
                    "appGW_capacity": {
                        "value": "[parameters('appGW_capacity')]"
                    },
                    "appGW_subnetName": {
                        "value": "[parameters('subnet_Names').appGW]"
                    },
                    "appGW_publicIpAddressName": {
                        "value": "[variables('appGW_publicIpAddressName')]"
                    },
                    "appGW_backendIPAddresses": {
                        "value": "[parameters('appGW_backendIPAddresses')]"
                    },
                    "appGW_allocationMethod": {
                        "value": "Dynamic"
                    },
                    "appGW_idleTimeoutInMinutes": {
                        "value": 5
                    },
                    "appGW-certData": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVaultResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVaultName'))]"
                            },
                            "secretName": "[parameters('secretName_appGW-certData')]"
                        }
                    },
                    "appGW_certPassword": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVaultResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVaultName'))]"
                            },
                            "secretName": "[parameters('secretName_certPassword')]"
                        }
                    },
                    "ApplicationName": {
                        "value": "[parameters('ApplicationName')]"
                    },
                    "uai": {
                        "value": "uai2008973"
                    },
                    "SupportEmail": {
                        "value": "[parameters('SupportEmail')]"
                    },
                    "env": {
                        "value": "[parameters('Environment_Category')]"
                    },
                    "preserve": {
                        "value": true
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "resourcegroup": "[variables('resourceNames').commonResourceGroup]",
            "name": "VPN",
            "apiVersion": "2018-05-01",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').vpn]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vpnName": {
                        "value": "[concat(variables('resourceNames').vpn,'1')]"
                    },
                    "vpnSku": {
                        "value": "[variables('vpnSku')]"
                    },
                    "vpnConnection": {
                        "value": "[parameters('vpnConnection')]"
                    },
                    "vpnType": {
                        "value": "[parameters('vpnType')]"
                    },
                    "VirtualNetworkName": {
                        "value": "[variables('resourceNames').virtualNetwork]"
                    },
                    "vpnSubnetName": {
                        "value": "[parameters('subnet_Names').vpnSubnet]"
                    },
                    "vpnPublicIpAddressName": {
                        "value": "[variables('vpnPublicIpAddress')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}