{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetwork": {
            "type": "string"
        },
        "loadbalancer": {
            "type": "string"
        },
        "adILB_IP": {
            "type": "string"
        },
        "vnet_addressPrefix": {
            "type": "object"
        },
        "domain_addressPrefix": {
            "type": "object"
        },
        "subnet_Names": {
            "type": "object"
        },
        "networkSecurityGroup": {
            "type": "string"
        },
        "RDPILB_IP": {
            "type": "string"
        },
        "jumpboxILB_IP": {
            "type": "string"
        },
        "sqlILB_IP": {
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2015-05-01-preview",
            "name": "[parameters('virtualNetwork')]",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnet_addressPrefix').addr1]",
                        "[parameters('vnet_addressPrefix').addr2]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnet_Names').domain]",
                        "properties": {
                            "addressPrefix": "[parameters('domain_addressPrefix').addr1]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('networkSecurityGroup'),'3'))]"
                            },
                            "serviceEndpoints": [],
                            "delegations": []
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false,
                "enableVmProtection": false
            },
            "dependsOn": []
        },
        {
            "apiVersion": "2018-10-01",
            "name": "[concat(parameters('loadbalancer'),'1')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [
                "[parameters('virtualNetwork')]"
            ],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetwork'), parameters('subnet_Names').domain)]"
                            },
                            "privateIPAddress": "[parameters('adILB_IP')]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-10-01",
            "name": "[concat(parameters('loadbalancer'),'2')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [
                "[parameters('virtualNetwork')]"
            ],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetwork'), parameters('subnet_Names').RDP)]"
                            },
                            "privateIPAddress": "[parameters('RDPILB_IP')]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-10-01",
            "name": "[concat(parameters('loadbalancer'),'3')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [
                "[parameters('virtualNetwork')]"
            ],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetwork'), parameters('subnet_Names').external)]"
                            },
                            "privateIPAddress": "[parameters('jumpboxILB_IP')]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-10-01",
            "name": "[concat(parameters('loadbalancer'),'4')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [
                "[parameters('virtualNetwork')]"
            ],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetwork'), parameters('subnet_Names').commondb)]"
                            },
                            "privateIPAddress": "[parameters('sqlILB_IP')]"
                        }
                    }
                ]
            }
        }
    ]
}
