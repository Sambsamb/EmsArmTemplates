{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ApplicationName": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars e.g. nxt (Next Net), ems"
            },
            "defaultValue": ""
        },
        "SupportEmail": {
            "type": "string"
        },
        "shortLocation": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars. E.g. East US - EU, West US - WU, East US 2 - EU2"
            },
            "defaultValue": ""
        },
        "Environment_Category": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 char. E.g.  DEV, QA, UAT and PRD"
            },
            "defaultValue": ""
        },
        "Tenant": {
            "type": "string",
            "maxLength": 5,
            "metadata": {
                "description": "3 char. E.g.  SRD"
            },
            "defaultValue": ""
        },
        "Role": {
            "type": "string",
            "defaultValue": "sft",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars e.g. Front end (WEB), Storage (STR), Messaging (MSG), Network (NET), General (GEN) etc."
            }
        },
        "Custom": {
            "type": "string",
            "maxLength": 8,
            "metadata": {
                "description": "(Product Specific) Space. 8 chars (OPTIONAL)"
            }
        },
        "keyVault_Name": {
            "type": "string"
        },
        "keyVault_ResourceGroup": {
            "type": "string"
        },
        "subnet_Names": {
            "type": "object",
            "defaultValue": ""
        },
        "dc_virtualMachineSize": {
            "type": "string"
        },
        "domainController_IPs": {
            "type": "array"
        },
        "domainName": {
            "type": "string"
        },
        "secretname_DomainAdminUserName": {
            "type": "string"
        },
        "secretname_DomainAdminPassword": {
            "type": "string"
        },
        "secretname_ApplicationID": {
            "type": "string"
        },
        "secretname_AppSecret": {
            "type": "string"
        },
        "artifacts_baseUri": {
            "type": "string"
        }
    },
    "variables": {
        "uai": "uai2008973",
        "preserve": true,
        "CharactersForvmName": 3,
        "StorageAccountType": "Standard_LRS",
        "resourceNames": {
            "vnetResourceGroup": "[toupper(concat('gav-',parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('Tenant'),'-',parameters('shortLocation'),'-01'))]",
            "loganalyticsResourceGroup": "[toupper(concat('gav-',parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('Tenant'),'-',parameters('shortLocation'),'-01'))]",
            "automationAccountResourceGroup": "[toupper(concat('gav-',parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('Tenant'),'-',parameters('shortLocation'),'-01'))]",
            "availabilitySet": "[toupper(concat('gav-',parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('Tenant'),'-',parameters('shortLocation'),'-00'))]",
            "StorageAccount": "[tolower(concat(parameters('ApplicationName'),parameters('Environment_Category'),'stg',parameters('Tenant'),'str','00'))]",
            "virtualNetwork": "[toupper(concat('gav-',parameters('ApplicationName'),'-',parameters('Environment_Category'),'-net-',parameters('shortLocation'),'-00'))]",
            "loganalyticsWorkspace": "[toupper(concat('gav-',parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('Tenant'),'-',parameters('shortLocation'),'-001'))]",
            "automationAccount": "[toupper(concat('gav-',parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('Tenant'),'-',parameters('shortLocation'),'-001'))]",
            "applicationGateway": "[toupper(concat('gav-',parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('Tenant'),'-',parameters('shortLocation'),'-00'))]",
            "networkSecurityGroup": "[tolower(concat('gav-',parameters('ApplicationName'),'-',parameters('Environment_Category'),'-nsg-',parameters('shortLocation'),'-',parameters('Tenant'),'-00'))]",
            "loadbalancer": "[toupper(concat('gav-',parameters('ApplicationName'),'-',parameters('Environment_Category'),'-ilb-',parameters('shortLocation'),'-00'))]",
            "networkinterface": "[toupper(concat('gav-',parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('Tenant'),'-',parameters('shortLocation'),'-00'))]",
            "virtualmachine": "[toupper(concat(parameters('ApplicationName'),first(parameters('Environment_Category')),take(parameters('Role'),variables('CharactersForvmName')),parameters('Tenant'),'00'))]",
            "osDisk": "[tolower(concat('gav',parameters('ApplicationName'),'-',parameters('Environment_Category'),'-','dr','-','','','osd','-','dsk','-',parameters('Role'),'-00'))]",
            "dataDisk": "[tolower(concat('gav',parameters('ApplicationName'),'-',parameters('Environment_Category'),'-','dr','-','dat','-','dsk','-',parameters('Role'),'-00'))]"
        },
        "TemplateURLs": {
            "networkSecurityGroup": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/NETWORK/linkedTemplates/networkSecurityGroup.json')]",
            "loganalyticsWorkspace": "[concat(parameters('artifacts_baseUri'),'/allResources/master/network/LogAnalyticsWorkspace.json')]",
            "virtualNetwork": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/NETWORK/linkedTemplates/virtualNetwork.json')]",
            "automationAccount": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AutomationAccount/linkedTemplate/automationAccount.json')]",
            "domainControllers": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AD/linkedTemplates/domainControllers.json')]",
            "CreateADForest": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AD/linkedTemplates/CreateADForest.json')]",
            "configureADBDC": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AD/linkedTemplates/configureADBDC.json')]",
            "adPDCModulesURL": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AD/DSC/CreateADPDC.ps1.zip')]",
            "adBDCModulesURL": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AD/DSC/ConfigureADBDC.ps1.zip')]",
            "adPDCConfigurationFunction": "CreateADPDC.ps1\\CreateADPDC",
            "adBDCConfigurationFunction": "ConfigureADBDC.ps1\\ConfigureADBDC",
            "AzureRM_Profile_Module_URL": "[concat('https://www.powershellgallery.com/api/v2/package/', 'AzureRM.Profile')]",
            "AzureRM_Network_Module_URL": "[concat('https://www.powershellgallery.com/api/v2/package/', 'AzureRM.Network')]",
            "vnetDNS_Trigger": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AD/linkedTemplates/vnetDNS_Trigger.json')]",
            "ad_RunbookURL": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AD/linkedTemplates/vnetDNS_runbook.ps1')]",
            "ad_customScriptFilePath": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AD/linkedTemplates/vnetDNS_Trigger.ps1')]"
        }
    },
    "resources": [
        {
            "name": "DC",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').domainControllers]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "ad_vmCount": {
                        "value": 2
                    },
                    "ad_SubnetRef": {
                        "value": "[parameters('subnet_Names').domain]"
                    },
                    "domainController_IPs": {
                        "value": "[parameters('domainController_IPs')]"
                    },
                    "virtualmachineName": {
                        "value": "[variables('resourceNames').virtualmachine]"
                    },
                    "vnetResourceGroup": {
                        "value": "[variables('resourceNames').vnetResourceGroup]"
                    },
                    "virtualNetworkName": {
                        "value": "[concat(variables('resourceNames').virtualNetwork,'1')]"
                    },
                    "networkInterfaceName": {
                        "value": "[variables('resourceNames').networkinterface]"
                    },
                    "availabilitySetName": {
                        "value": "[concat(variables('resourceNames').availabilitySet,'1')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('dc_virtualMachineSize')]"
                    },
                    "StorageAccountType": {
                        "value": "[variables('StorageAccountType')]"
                    },
                    "osDiskName": {
                        "value": "[variables('resourceNames').osDisk]"
                    },
                    "dataDiskName": {
                        "value": "[variables('resourceNames').dataDisk]"
                    },
                    "numberOfDataDisks": {
                        "value": 1
                    },
                    "DataDiskSize": {
                        "value": 100
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "DomainAdminUserName": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminUserName')]"
                        }
                    },
                    "DomainAdminPassword": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminPassword')]"
                        }
                    },
                    "omsWorkspaceResourceGroup": {
                        "value": "[variables('resourceNames').loganalyticsResourceGroup]"
                    },
                    "omsWorkspaceName": {
                        "value": "[variables('resourceNames').loganalyticsWorkspace]"
                    },
                    "ApplicationName": {
                        "value": "[parameters('ApplicationName')]"
                    },
                    "SupportEmail": {
                        "value": "[parameters('SupportEmail')]"
                    },
                    "uai": {
                        "value": "[variables('uai')]"
                    },
                    "Environment_Category": {
                        "value": "[parameters('Environment_Category')]"
                    },
                    "preserve": {
                        "value": "[variables('preserve')]"
                    }
                }
            }
        },
        {
            "name": "ConfigureADForest",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "DC"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').CreateADForest]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmCount": {
                        "value": 1
                    },
                    "virtualmachineName": {
                        "value": "[variables('resourcenames').virtualmachine]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "DomainAdminUserName": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminUserName')]"
                        }
                    },
                    "DomainAdminPassword": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminPassword')]"
                        }
                    },
                    "adPDCModulesURL": {
                        "value": "[variables('templateURLs').adPDCModulesURL]"
                    },
                    "adPDCConfigurationFunction": {
                        "value": "[variables('templateURLs').adPDCConfigurationFunction]"
                    }
                }
            }
        },
        {
            "name": "vnetDNS_Trigger",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "DC",
                "ConfigureADForest"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').vnetDNS_Trigger]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualmachineName": {
                        "value": "[variables('resourcenames').virtualmachine]"
                    },
                    "vmCount": {
                        "value": 1
                    },
                    "CustomScriptFileName": {
                        "value": "vnetDNS_Trigger.ps1"
                    },
                    "vnetDNSTrigger_ScriptFilePath": {
                        "value": "[variables('TemplateURLs').ad_customScriptFilePath]"
                    },
                    "applicationId": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_ApplicationID')]"
                        }
                    },
                    "appsecret": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_AppSecret')]"
                        }
                    },
                    "tenantId": {
                        "value": "[subscription().tenantId]"
                    },
                    "automationAccountResourceGroup": {
                        "value": "[variables('resourceNames').automationAccountResourceGroup]"
                    },
                    "automationAccount": {
                        "value": "[variables('resourceNames').automationAccount]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "configureADBDC",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "DC",
                "vnetDNS_Trigger"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').configureADBDC]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmCount": {
                        "value": 1
                    },
                    "virtualmachineName": {
                        "value": "[variables('resourcenames').virtualmachine]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "adminUserName": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminUserName')]"
                        }
                    },
                    "adminPassword": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminPassword')]"
                        }
                    },
                    "adBDCModulesURL": {
                        "value": "[variables('templateURLs').adBDCModulesURL]"
                    },
                    "adBDCConfigurationFunction": {
                        "value": "[variables('templateURLs').adBDCConfigurationFunction]"
                    }
                }
            }
        }
    ]
}
