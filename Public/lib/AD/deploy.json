{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ApplicationName": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars e.g. nxt (Next Net), ems"
            }
        },
        "Environment_Category": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 char. E.g.  DEV, QA, UAT and PRD"
            }
        },
        "Tenant": {
            "type": "string",
            "maxLength": 5,
            "metadata": {
                "description": "3 char. E.g.  SRD"
            }
        },
        "Role": {
            "type": "string",
            "defaultValue": "ems",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars e.g. Front end (WEB), Storage (STR), Messaging (MSG), Network (NET), General (GEN) etc."
            }
        },
       
        "keyVault_Name": {
            "type": "string"
        },
        "keyVault_ResourceGroup": {
            "type": "string"
        },
        "subnet_Names": {
            "type": "object"
        },
        "dc_virtualMachineSize": {
            "type": "string"
        },
        "domainController_IPs": {
            "type": "array"
        },
        "domainName": {
            "type": "string"
        },
        "vnet_addressPrefix": {
            "type": "object"
        },
        "adminSubnet_pop-env_Octet": {
            "type": "string"
        },
        "adILB_IP": {
            "type": "string"
        },
        "subnet_addressPrefixes": {
            "type": "object"
        },
        "secretname_DomainAdminUserName": {
            "type": "string"
        },
        "secretname_DomainAdminPassword": {
            "type": "string"
        },
        "artifacts_baseUri": {
            "type": "string"
        }
    },
    "variables": {
        "uai": "uai2008973",
        "preserve": true,
        "SupportEmail": "ravi.mishra@ge.com",
        "StorageAccountType": "Standard_LRS",
        "Location": "south central us",
        "CharactersForvmName": 2,
        "admin_addressPrefixes": "[concat('172.21.',parameters('adminSubnet_pop-env_Octet'),'.0','/','26')]",
        "resourceNames": {
            "commonResourceGroup": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('Tenant'),'-01'))]",
            "virtualNetwork": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-net-',parameters('Tenant'),'-01'))]",
            "loganalyticsWorkspace": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-oms-',parameters('Tenant'),'-01'))]",
            "availabilitySet": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-dc-av-',parameters('Tenant'),'-00'))]",
            "networkinterface": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-dc-nic-',parameters('Tenant'),'-00'))]",
            "automationAccount": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-auto-',parameters('Tenant'),'-00'))]",
            "applicationGateway": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-apgw-',parameters('Tenant'),'-00'))]",
            "networkSecurityGroup": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-nsg-',parameters('Tenant'),'-00'))]",
            "loadbalancer": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-dc-lb-',parameters('Tenant'),'-00'))]",
            "virtualmachine":"[toupper(concat(take(parameters('ApplicationName'),variables('CharactersForvmName')),first(parameters('Environment_Category')),first(parameters('Role')),'adc','00'))]",
            "osDisk": "[tolower(concat(parameters('ApplicationName'),'-','dc-osd','-',parameters('Tenant'),'-00'))]",
            "dataDisk": "[tolower(concat(parameters('ApplicationName'),'-','dc-dd','-',parameters('Tenant'),'-00'))]"
        },
        "TemplateURLs": {
            "networkSecurityGroup": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/NETWORK/linkedTemplates/networkSecurityGroup.json')]",
            "loganalyticsWorkspace": "[concat(parameters('artifacts_baseUri'),'/allResources/master/network/LogAnalyticsWorkspace.json')]",
            "virtualNetwork": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AD/linkedTemplates/virtualNetwork.json')]",
            "automationAccount": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AutomationAccount/linkedTemplates/automationAccount.json')]",
            "domainControllers": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AD/linkedTemplates/domainControllers.json')]",
            "CreateADForest": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AD/linkedTemplates/CreateADForest.json')]",
            "configureADBDC": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AD/linkedTemplates/configureADBDC.json')]",
            "adPDCModulesURL": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AD/DSC/CreateADPDC.ps1.zip')]",
            "adBDCModulesURL": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AD/DSC/ConfigureADBDC.ps1.zip')]",
            "adPDCConfigurationFunction": "CreateADPDC.ps1\\CreateADPDC",
            "adBDCConfigurationFunction": "ConfigureADBDC.ps1\\ConfigureADBDC",
            "ad_customScriptFilePath": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/AD/linkedTemplates/customScripts.json')]"
        }
    },
    "resources": [
        {
            "name": "DC",
            "type": "Microsoft.Resources/deployments",
            "resourcegroup": "[variables('resourceNames').commonResourceGroup]",
            "apiVersion": "2018-05-01",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').domainControllers]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "ad_vmCount": {
                        "value": 2
                    },
                    "ad_SubnetName": {
                        "value": "[parameters('subnet_Names').domain]"
                    },
                    "domainController_IPs": {
                        "value": "[parameters('domainController_IPs')]"
                    },
                    "virtualmachineName": {
                        "value": "[variables('resourceNames').virtualmachine]"
                    },
                    "vnetResourceGroup": {
                        "value": "[variables('resourceNames').commonResourceGroup]"
                    },
                    "virtualNetworkName": {
                        "value": "[concat(variables('resourceNames').virtualNetwork)]"
                    },
                    "networkInterfaceName": {
                        "value": "[variables('resourceNames').networkinterface]"
                    },
                    "availabilitySetName": {
                        "value": "[concat(variables('resourceNames').availabilitySet,'1')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('dc_virtualMachineSize')]"
                    },
                    "StorageAccountType": {
                        "value": "[variables('StorageAccountType')]"
                    },
                    "osDiskName": {
                        "value": "[variables('resourceNames').osDisk]"
                    },
                    "dataDiskName": {
                        "value": "[variables('resourceNames').dataDisk]"
                    },
                    "numberOfDataDisks": {
                        "value": 1
                    },
                    "DataDiskSize": {
                        "value": 100
                    },
                    "DomainAdminUserName": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminUserName')]"
                        }
                    },
                    "DomainAdminPassword": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminPassword')]"
                        }
                    },
                    "omsWorkspaceResourceGroup": {
                        "value": "[variables('resourceNames').commonResourceGroup]"
                    },
                    "omsWorkspaceName": {
                        "value": "[variables('resourceNames').loganalyticsWorkspace]"
                    },
                    "ApplicationName": {
                        "value": "[parameters('ApplicationName')]"
                    },
                    "SupportEmail": {
                        "value": "[variables('SupportEmail')]"
                    },
                    "uai": {
                        "value": "[variables('uai')]"
                    },
                    "Environment_Category": {
                        "value": "[parameters('Environment_Category')]"
                    },
                    "preserve": {
                        "value": "[variables('preserve')]"
                    }
                }
            }
        },
        {
            "name": "ConfigureADForest",
            "type": "Microsoft.Resources/deployments",
            "resourcegroup": "[variables('resourceNames').commonResourceGroup]",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "DC"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').CreateADForest]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmCount": {
                        "value": 1
                    },
                    "virtualmachineName": {
                        "value": "[variables('resourcenames').virtualmachine]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "DomainAdminUserName": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminUserName')]"
                        }
                    },
                    "DomainAdminPassword": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminPassword')]"
                        }
                    },
                    "adPDCModulesURL": {
                        "value": "[variables('templateURLs').adPDCModulesURL]"
                    },
                    "adPDCConfigurationFunction": {
                        "value": "[variables('templateURLs').adPDCConfigurationFunction]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "resourcegroup": "[variables('resourceNames').commonResourceGroup]",
            "name": "virtualNetwork",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "ConfigureADForest"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').virtualNetwork]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetwork": {
                        "value": "[variables('resourceNames').virtualNetwork]"
                    },
                    "vnet_addressPrefix": {
                        "value": "[parameters('vnet_addressPrefix')]"
                    },
                    "admin_addressPrefixes": {
                        "value": "[variables('admin_addressPrefixes')]"
                    },
                    "loadbalancer": {
                        "value": "[variables('resourceNames').loadbalancer]"
                    },
                    "adILB_IP": {
                        "value": "[parameters('adILB_IP')]"
                    },
                    "subnet_Names": {
                        "value": "[parameters('subnet_Names')]"
                    },
                    "subnet_addressPrefixes": {
                        "value": "[parameters('subnet_addressPrefixes')]"
                    },
                    "networkSecurityGroup": {
                        "value": "[variables('resourceNames').networkSecurityGroup]"
                    },
                    "DNSServerAddress": {
                        "value": "[parameters('domainController_IPs')[0]]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "resourcegroup": "[variables('resourceNames').commonResourceGroup]",
            "name": "customScripts",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "virtualNetwork"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').ad_customScriptFilePath]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualmachineName": {
                        "value": "[concat(variables('resourcenames').virtualmachine,'2')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "resourcegroup": "[variables('resourceNames').commonResourceGroup]",
            "name": "configureADBDC",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "virtualNetwork",
                "customScripts"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').configureADBDC]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmCount": {
                        "value": 1
                    },
                    "virtualmachineName": {
                        "value": "[variables('resourcenames').virtualmachine]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "adminUserName": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminUserName')]"
                        }
                    },
                    "adminPassword": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminPassword')]"
                        }
                    },
                    "adBDCModulesURL": {
                        "value": "[variables('templateURLs').adBDCModulesURL]"
                    },
                    "adBDCConfigurationFunction": {
                        "value": "[variables('templateURLs').adBDCConfigurationFunction]"
                    }
                }
            }
        }
    ]
}