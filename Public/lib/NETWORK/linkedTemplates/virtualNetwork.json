{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetworkName": {
            "type": "string"
        },
        "subnet_Names": {
            "type": "object"
        },
        "vnet_addressPrefix": {
            "type": "object"
        },
        "subnet_addressPrefixes": {
            "type": "object"
        },
        "nsgName": {
            "type": "string"
        },
        "sqlILB_Name": {
            "type": "string"
        },
        "sqlILB_IP": {
            "type": "string"
        },
        "jumpboxILB_Name": {
            "type": "string"
        },
        "jumpboxILB_IP": {
            "type": "string"
        }
    },
    "variables": {
        "virtualNetworkName": "[concat(parameters('virtualNetworkName'),'1')]",
        "commondb": "[concat(parameters('nsgName'),'1')]",
        "GatewaySubnet": "[concat(parameters('nsgName'),'2')]",
        "domain": "[concat(parameters('nsgName'),'3')]",
        "external": "[concat(parameters('nsgName'),'4')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('virtualNetworkName')]",
            "apiVersion": "2018-10-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnet_addressPrefix').addr1]",
                        "[parameters('vnet_addressPrefix').addr2]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnet_Names').commondb]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').commondb]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', variables('commondb'))]"
                            },
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').GatewaySubnet]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').GatewaySubnet]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', variables('GatewaySubnet'))]"
                            },
                            "serviceEndpoints": [],
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').domain]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').domain]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', variables('domain'))]"
                            },
                            "serviceEndpoints": [],
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').external]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').external]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', variables('external'))]"
                            },
                            "serviceEndpoints": [],
                            "delegations": []
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false,
                "enableVmProtection": false
            },
            "dependsOn": []
        },
        {
            "apiVersion": "2018-10-01",
            "name": "[parameters('sqlILB_Name')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [
                "[variables('virtualNetworkName')]"
            ],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualNetworkName'), parameters('subnet_Names').commondb)]"
                            },
                            "privateIPAddress": "[parameters('sqlILB_IP')]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-10-01",
            "name": "[parameters('jumpboxILB_Name')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [
                "[variables('virtualNetworkName')]"
            ],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualNetworkName'), parameters('subnet_Names').external)]"
                            },
                            "privateIPAddress": "[parameters('jumpboxILB_IP')]"
                        }
                    }
                ]
            }
        }
    ]
}
