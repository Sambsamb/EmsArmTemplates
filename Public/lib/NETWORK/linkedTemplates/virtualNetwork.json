{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ApplicationName": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars e.g. nxt (Next Net), ems"
            },
            "defaultValue": ""
        },
        "SupportEmail": {
            "type": "string"
        },
        "shortLocation": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars. E.g. East US - EU, West US - WU, East US 2 - EU2"
            },
            "defaultValue": ""
        },
        "Environment_Category": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 char. E.g.  DEV, QA, UAT and PRD"
            },
            "defaultValue": ""
        },
        "Tenant": {
            "type": "string",
            "maxLength": 5,
            "metadata": {
                "description": "3 char. E.g.  SRD"
            },
            "defaultValue": ""
        },
        "Role": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars e.g. Front end (WEB), Storage (STR), Messaging (MSG), Network (NET), General (GEN) etc."
            }
        },
        "Custom": {
            "type": "string",
            "maxLength": 8,
            "metadata": {
                "description": "(Product Specific) Space. 8 chars (OPTIONAL)"
            }
        },
        "vnet_addressPrefix": {
            "type": "object"
        },
        "domain_addressPrefix": {
            "type": "object"
        },
        "adILB_IP": {
            "type": "string"
        },
        "jumpboxILB_IP": {
            "type": "string"
        },
        "firewallILB_IP": {
            "type": "string"
        },
        "subnet_Names": {
            "type": "object"
        },
        "subnet_addressPrefixes": {
            "type": "object"
        },
        "artifacts_baseUri": {
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "resourcegroup": "[parameters('vnetResourceGroup')]",
            "name": "[parameters('virtualNetwork')]",
            "apiVersion": "2018-10-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnet_addressPrefix').addr1]",
                        "[parameters('vnet_addressPrefix').addr2]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnet_Names').external]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').external]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('networkSecurityGroup'),'1'))]"
                            },
                            "serviceEndpoints": [],
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').vpnSubnet]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').vpnSubnet]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('networkSecurityGroup'),'2'))]"
                            },
                            "serviceEndpoints": [],
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').domain]",
                        "properties": {
                            "addressPrefix": "[parameters('domain_addressPrefix').addr1]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('networkSecurityGroup'),'3'))]"
                            },
                            "serviceEndpoints": [],
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').commondb]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').commondb]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('networkSecurityGroup'),'4'))]"
                            },
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').tableau]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').tableau]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('networkSecurityGroup'),'5'))]"
                            },
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').sftp]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').sftp]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('networkSecurityGroup'),'6'))]"
                            },
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').wasabi]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').wasabi]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups',concat(parameters('networkSecurityGroup'),'7'))]"
                            },
                            "delegations": []
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false,
                "enableVmProtection": false
            },
            "dependsOn": []
        },
        {
            "apiVersion": "2018-10-01",
            "name": "[concat(parameters('loadbalancer'),'1')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [
                "[parameters('virtualNetwork')]"
            ],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetwork'), parameters('subnet_Names').domain)]"
                            },
                            "privateIPAddress": "[parameters('adILB_IP')]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-10-01",
            "name": "[concat(parameters('loadbalancer'),'2')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [
                "[parameters('virtualNetwork')]"
            ],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetwork'), parameters('subnet_Names').external)]"
                            },
                            "privateIPAddress": "[parameters('jumpboxILB_IP')]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-10-01",
            "name": "[concat(parameters('loadbalancer'),'3')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [
                "[parameters('virtualNetwork')]"
            ],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetwork'), parameters('subnet_Names').AzureFirewallSubnet)]"
                            },
                            "privateIPAddress": "[parameters('firewallILB_IP')]"
                        }
                    }
                ]
            }
        }
    ]
}
