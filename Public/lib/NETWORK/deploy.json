{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ApplicationName": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars e.g. nxt (Next Net), ems"
            },
            "defaultValue": ""
        },
        "SupportEmail": {
            "type": "string"
        },
        "shortLocation": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars. E.g. East US - EU, West US - WU, East US 2 - EU2"
            },
            "defaultValue": ""
        },
        "Environment_Category": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 char. E.g.  DEV, QA, UAT and PRD"
            },
            "defaultValue": ""
        },
        "Tenant": {
            "type": "string",
            "maxLength": 5,
            "metadata": {
                "description": "3 char. E.g.  SRD"
            },
            "defaultValue": ""
        },
        "Role": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars e.g. Front end (WEB), Storage (STR), Messaging (MSG), Network (NET), General (GEN) etc."
            }
        },
        "Custom": {
            "type": "string",
            "maxLength": 8,
            "metadata": {
                "description": "(Product Specific) Space. 8 chars (OPTIONAL)"
            }
        },
        "keyVaultResourceGroup": {
            "type": "string"
        },
        "keyvaultName": {
            "type": "string"
        },
        "vnet_addressPrefix": {
            "type": "object"
        },
        "adILB_IP": {
            "type": "string"
        },
        "jumpboxILB_IP": {
            "type": "string"
        },
        "RDPILB_IP": {
            "type": "string"
        },
        "sqlILB_IP": {
            "type": "string"
        },
        "appGW_tier": {
            "type": "string"
        },
        "appGW_Size": {
            "type": "string"
        },
        "appGW_capacity": {
            "type": "int"
        },
        "appGW_backendIPAddresses": {
            "type": "string"
        },
        "secretName_appGW-certData": {
            "type": "string"
        },
        "secretName_certPassword": {
            "type": "string"
        },
        "subnet_Names": {
            "type": "object"
        },
        "subnet_addressPrefixes": {
            "type": "object"
        },
        "domain_addressPrefix": {
            "type": "object"
        },
        "gatewayType": {
            "type": "string",
            "defaultValue": "Vpn",
            "allowedValues": [
                "Vpn",
                "ExpressRoute"
            ]
        },
        "vpnType": {
            "type": "string",
            "defaultValue": "RouteBased",
            "allowedValues": [
                "RouteBased",
                "PolicyBased"
            ]
        },
        "artifacts_baseUri": {
            "type": "string"
        }
    },
    "variables": {
        "vpnSku": "VpnGw1",
        "resource_Location": "south central us",
        "appGW_domainNameLabel": "emsappgw",
        "appGW_publicIpAddressName": "emsappgwpip",
        "vpnPublicIpAddress": "emsvpnpip",
        "resourceNames": {
            "commonResourceGroup": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('Tenant'),'-01'))]",
            "loganalyticsWorkspace": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('Tenant'),'-',parameters('shortLocation'),'-002'))]",
            "virtualNetwork": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-net-',parameters('shortLocation'),'-001'))]",
            "applicationGateway": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('Tenant'),'-',parameters('shortLocation'),'-001'))]",
            "loadbalancer": "[toupper(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-ilb-',parameters('shortLocation'),'-00'))]",
            "networkSecurityGroup": "[tolower(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-nsg-',parameters('shortLocation'),'-',parameters('Tenant'),'-00'))]",
            "vpn": "[tolower(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-vpn-',parameters('shortLocation'),'-',parameters('Tenant'),'-00'))]"
        },
        "TemplateURLs": {
            "networkSecurityGroup": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/NETWORK/linkedTemplates/networkSecurityGroup.json')]",
            "logAnalytics": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/NETWORK/linkedTemplates/logAnalytics.json')]",
            "virtualNetwork": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/NETWORK/linkedTemplates/virtualNetwork.json')]",
            "appGW": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/NETWORK/linkedTemplates/appGW.json')]",
            "vpn": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/NETWORK/linkedTemplates/VPN.json')]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[variables('resource_Location')]",
            "name": "[variables('resourceNames').commonResourceGroup]",
            "tags": {
                "ApplicationName": "EMS",
                "uai": "uai2008973",
                "SupportEmail": "[parameters('SupportEmail')]",
                "env": "[parameters('Environment_Category')]"
            },
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "networkSecurityGroup",
            "apiVersion": "2018-05-01",
            "resourcegroup": "[variables('resourceNames').commonResourceGroup]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('resourceNames').commonResourceGroup)]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').networkSecurityGroup]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "nsgName": {
                        "value": "[variables('resourceNames').networkSecurityGroup]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "resourcegroup": "[variables('resourceNames').commonResourceGroup]",
            "name": "logAnalytics",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('resourceNames').commonResourceGroup)]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').logAnalytics]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[variables('resourceNames').loganalyticsWorkspace]"
                    },
                    "OMSWorkSpaceLocation": {
                        "value": "eastus"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "resourcegroup": "[variables('resourceNames').commonResourceGroup]",
            "name": "virtualNetwork",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('resourceNames').commonResourceGroup)]",
                "networkSecurityGroup"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').virtualNetwork]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetwork": {
                        "value": "[variables('resourceNames').virtualNetwork]"
                    },
                    "vnet_addressPrefix": {
                        "value": "[parameters('vnet_addressPrefix')]"
                    },
                    "domain_addressPrefix": {
                        "value": "[parameters('domain_addressPrefix')]"
                    },
                    "loadbalancer": {
                        "value": "[variables('resourceNames').loadbalancer]"
                    },
                    "adILB_IP": {
                        "value": "[parameters('adILB_IP')]"
                    },
                    "jumpboxILB_IP": {
                        "value": "[parameters('jumpboxILB_IP')]"
                    },
                    "RDPILB_IP": {
                        "value": "[parameters('RDPILB_IP')]"
                    },
                    "sqlILB_IP": {
                        "value": "[parameters('sqlILB_IP')]"
                    },
                    "subnet_Names": {
                        "value": "[parameters('subnet_Names')]"
                    },
                    "subnet_addressPrefixes": {
                        "value": "[parameters('subnet_addressPrefixes')]"
                    },
                    "networkSecurityGroup": {
                        "value": "[variables('resourceNames').networkSecurityGroup]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "resourcegroup": "[variables('resourceNames').commonResourceGroup]",
            "name": "applicationGateway",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "virtualNetwork",
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('resourceNames').commonResourceGroup)]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').appGW]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetwork": {
                        "value": "[variables('resourceNames').virtualNetwork]"
                    },
                    "appGW_Name": {
                        "value": "[variables('resourceNames').applicationGateway]"
                    },
                    "appGW_domainNameLabel": {
                        "value": "[variables('appGW_domainNameLabel')]"
                    },
                    "appGW_tier": {
                        "value": "[parameters('appGW_tier')]"
                    },
                    "appGW_Size": {
                        "value": "[parameters('appGW_Size')]"
                    },
                    "appGW_capacity": {
                        "value": "[parameters('appGW_capacity')]"
                    },
                    "appGW_subnetName": {
                        "value": "[parameters('subnet_Names').appGW]"
                    },
                    "appGW_publicIpAddressName": {
                        "value": "[variables('appGW_publicIpAddressName')]"
                    },
                    "appGW_backendIPAddresses": {
                        "value": "[parameters('appGW_backendIPAddresses')]"
                    },
                    "appGW_allocationMethod": {
                        "value": "Dynamic"
                    },
                    "appGW_idleTimeoutInMinutes": {
                        "value": 5
                    },
                    "appGW-certData": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVaultResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVaultName'))]"
                            },
                            "secretName": "[parameters('secretName_appGW-certData')]"
                        }
                    },
                    "appGW_certPassword": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVaultResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVaultName'))]"
                            },
                            "secretName": "[parameters('secretName_certPassword')]"
                        }
                    },
                    "ApplicationName": {
                        "value": "[parameters('ApplicationName')]"
                    },
                    "uai": {
                        "value": "uai2008973"
                    },
                    "SupportEmail": {
                        "value": "[parameters('SupportEmail')]"
                    },
                    "env": {
                        "value": "[parameters('Environment_Category')]"
                    },
                    "preserve": {
                        "value": true
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "resourcegroup": "[variables('resourceNames').commonResourceGroup]",
            "name": "VPN",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "virtualNetwork",
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('resourceNames').commonResourceGroup)]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateURLs').vpn]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vpnName": {
                        "value": "[concat(variables('resourceNames').vpn,'1')]"
                    },
                    "vpnSku": {
                        "value": "[variables('vpnSku')]"
                    },
                    "gatewayType": {
                        "value": "[parameters('gatewayType')]"
                    },
                    "vpnType": {
                        "value": "[parameters('vpnType')]"
                    },
                    "VirtualNetworkName": {
                        "value": "[variables('resourceNames').virtualNetwork]"
                    },
                    "vpnSubnetName": {
                        "value": "[parameters('subnet_Names').vpnSubnet]"
                    },
                    "vpnPublicIpAddressName": {
                        "value": "[variables('vpnPublicIpAddress')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}