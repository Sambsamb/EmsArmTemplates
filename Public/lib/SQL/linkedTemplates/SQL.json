{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "numberofSQLVM": {
            "type": "int"
        },
        "sqlILB_Name": {
            "type": "string"
        },
        "sqlILB_IP": {
            "type": "string"
        },
        "sql_virtualMachineIP": {
            "type": "array"
        },
        "virtualmachineName": {
            "type": "string"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "subnet_Names": {
            "type": "string"
        },
        "sql_SubnetRef": {
            "type": "string"
        },
        "vnetResourceGroup": {
            "type": "string"
        },
        "networkInterfaceName": {
            "type": "string"
        },
        "virtualMachineSize": {
            "type": "string"
        },
        "osDiskName": {
            "type": "string"
        },
        "StorageAccountType": {
            "type": "string"
        },
        "StorageAccountName": {
            "type": "string"
        },
        "numberOfDataDisks": {
            "type": "int"
        },
        "DataDiskSize": {
            "type": "int"
        },
        "dataDiskName": {
            "type": "string"
        },
        "domainName": {
            "type": "string"
        },
        "DomainAdminUserName": {
            "type": "string"
        },
        "DomainAdminPassword": {
            "type": "securestring"
        },
        "omsWorkspaceResourceGroup": {
            "type": "string"
        },
        "omsWorkspaceName": {
            "type": "string"
        },
        "sqlCustom_ScriptFilePath": {
            "type": "string"
        },
        "uai": {
            "type": "string"
        },
        "SupportEmail": {
            "type": "string"
        },
        "Environment_Category": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[concat(parameters('StorageAccountName'), copyIndex(1))]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[resourcegroup().location]",
            "apiVersion": "2018-07-01",
            "copy": {
                "name": "storageLoop",
                "count": 1
            },
            "properties": {},
            "sku": {
                "name": "[parameters('StorageAccountType')]"
            },
            "tags": {
                "ApplicationName": "EMS",
                "uai": "[parameters('uai')]",
                "SupportEmail": "[parameters('SupportEmail')]",
                "env": "[parameters('Environment_Category')]"
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('networkinterfaceName'), copyIndex(3))]",
            "apiVersion": "2018-05-01",
            "location": "[resourcegroup().location]",
            "copy": {
                "name": "nicLoop",
                "count": "[parameters('numberofSQLVM')]"
            },
            "dependsOn": [],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIpAddress": "[concat(parameters('sql_virtualMachineIP')[copyindex()])]",
                            "privateIpAddressVersion": "IPv4",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('vnetResourceGroup'),'/providers/Microsoft.Network/virtualNetworks/',parameters('virtualNetworkName'),'/subnets/',parameters('sql_SubnetRef'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-10-01",
            "name": "[parameters('sqlILB_Name')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnet_Names').commondb)]"
                            },
                            "privateIPAddress": "[parameters('sqlILB_IP')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(parameters('virtualmachineName'), copyIndex(3))]",
            "apiVersion": "2018-10-01",
            "location": "[resourcegroup().location]",
            "copy": {
                "name": "virtualMachineLoop",
                "count": "[parameters('numberofSQLVM')]"
            },
            "dependsOn": [
                "nicLoop"
            ],
            "tags": {
                "ApplicationName": "EMS",
                "uai": "[parameters('uai')]",
                "SupportEmail": "[parameters('SupportEmail')]",
                "env": "[parameters('Environment_Category')]"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "osProfile": {
                    "computerName": "[concat(parameters('virtualmachineName'), copyIndex(3))]",
                    "adminUsername": "[parameters('DomainAdminUserName')]",
                    "adminPassword": "[parameters('DomainAdminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftSqlServer",
                        "offer": "SQL2016SP1-WS2016",
                        "sku": "Enterprise",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('osDiskName'), copyIndex(3))]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('StorageAccountType')]"
                        }
                    },
                    "copy": [
                        {
                            "name": "dataDisks",
                            "count": "[parameters('numberOfDataDisks')]",
                            "input": {
                                "caching": "ReadWrite",
                                "diskSizeGB": "[parameters('DataDiskSize')]",
                                "lun": "[copyIndex('dataDisks')]",
                                "name": "[concat(parameters('dataDiskName'),copyIndex(3), copyIndex('dataDisks'))]",
                                "createOption": "Empty"
                            }
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',resourcegroup().name,'/providers/Microsoft.Network/networkInterfaces/',concat(parameters('networkinterfaceName'), copyIndex(3)))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "type": "extensions",
                    "name": "domainJoin",
                    "location": "[resourceGroup().location]",
                    "apiVersion": "2015-06-15",
                    "dependson": [
                        "[concat(parameters('virtualmachineName'), copyIndex(3))]",
                        "customscripts"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "JsonADDomainExtension",
                        "typeHandlerVersion": "1.3",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "Name": "[parameters('domainName')]",
                            "OUPath": "",
                            "User": "[concat(parameters('domainName'), '\\', parameters('DomainAdminUserName'))]",
                            "Restart": "true",
                            "Options": "3"
                        },
                        "protectedSettings": {
                            "Password": "[parameters('DomainAdminPassword')]"
                        }
                    }
                },
                {
                    "type": "extensions",
                    "name": "logAnalytics",
                    "apiVersion": "2015-06-15",
                    "location": "[resourcegroup().location]",
                    "dependson": [
                        "[concat(parameters('virtualmachineName'), copyIndex(3))]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.EnterpriseCloud.Monitoring",
                        "type": "MicrosoftMonitoringAgent",
                        "typeHandlerVersion": "1.0",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "workspaceId": "[reference(resourceId(parameters('omsWorkspaceResourceGroup'),'Microsoft.OperationalInsights/workspaces/', parameters('omsWorkspaceName')), '2015-03-20').customerId]"
                        },
                        "protectedSettings": {
                            "workspaceKey": "[listKeys(resourceId(parameters('omsWorkspaceResourceGroup'),'Microsoft.OperationalInsights/workspaces/', parameters('omsWorkspaceName')), '2015-03-20').primarySharedKey]"
                        }
                    }
                },
                {
                    "type": "extensions",
                    "name": "customscripts",
                    "apiVersion": "2015-06-15",
                    "location": "[resourcegroup().location]",
                    "dependson": [
                        "[concat(parameters('virtualmachineName'), copyIndex(3))]",
                        "logAnalytics"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.9",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "[parameters('sqlCustom_ScriptFilePath')]"
                            ],
                            "commandToExecute": "powershell.exe -ExecutionPolicy Unrestricted -File customScripts.ps1"
                        }
                    }
                }
            ]
        }
    ]
}
