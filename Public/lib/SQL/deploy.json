{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ApplicationName": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars e.g. nxt (Next Net), ems"
            }
        },
        "SupportEmail": {
            "type": "string"
        },
        "Environment_Category": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 char. E.g.  DEV, QA, UAT and PRD"
            }
        },
        "shortlocation": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 char. E.g.  eastus=eus, eastus2=eu2, southcentralus=scu"
            }
        },
        "Tenant": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars  Shared (SRD), Tenant Acronym)"
            }
        },
        "Role": {
            "type": "string",
            "defaultValue": "ems",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars e.g. Front end (WEB), Storage (STR), Messaging (MSG), Network (NET), General (GEN) etc."
            }
        },
        "virtualMachineSize": {
            "type": "string"
        },
        "numberofSQLVM": {
            "type": "int"
        },
        "sql_SubnetName": {
            "type": "string"
        },
        "sqlILB_IP": {
            "type": "string"
        },
        "sqlVM_IP": {
            "type": "array"
        },
        "numberOfDataDisks": {
            "type": "int",
            "minValue": 3
        },
        "DataDiskSize": {
            "type": "int"
        },
        "domainName": {
            "type": "string"
        },
        "keyVault_ResourceGroup": {
            "type": "string"
        },
        "keyVault_Name": {
            "type": "string"
        },
        "secretname_DomainAdminUserName": {
            "type": "string"
        },
        "secretname_DomainAdminPassword": {
            "type": "string"
        },
        "artifacts_baseUri": {
            "type": "string"
        }
    },
    "variables": {
        "uai": "uai2008973",
        "StorageAccountType": "Standard_LRS",
        "resourceNames": {
            "commonResourceGroup": "[tolower(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('shortlocation'),'-',parameters('tenant'),'-rgp-','01'))]",
            "virtualNetwork": "[tolower(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('shortlocation'),'-net-','01'))]",
            "loganalyticsWorkspace": "[tolower(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('shortlocation'),'-oms-','02'))]",
            "loadbalancer": "[tolower(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('Tenant'),'-ilb-','01'))]",
            "virtualmachine": "[tolower(concat(first(parameters('ApplicationName')),parameters('Environment_Category'),parameters('Tenant'),parameters('Role'),'0'))]",
            "StorageAccount": "[tolower(concat(first(parameters('ApplicationName')),parameters('Environment_Category'),parameters('shortlocation'),parameters('Tenant'),'sto','0'))]"
        },
        "TemplateURLs": {
            "sql": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/SQL/linkedTemplates/SQL.json')]",
            "CustomScriptExtensionScriptFilePath": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/SQL/linkedTemplates/customScripts.ps1')]",
            "CustomScriptFileName": "customScripts.ps1"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "resourcegroup": "[variables('resourceNames').commonResourceGroup]",
            "name": "SQL",
            "apiVersion": "2018-05-01",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templateurls').sql]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "numberofSQLVM": {
                        "value": "[parameters('numberofSQLVM')]"
                    },
                    "sqlILB_Name": {
                        "value": "[variables('resourceNames').loadbalancer]"
                    },
                    "sqlILB_IP": {
                        "value": "[parameters('sqlILB_IP')]"
                    },
                    "sql_virtualMachineIP": {
                        "value": "[parameters('sqlVM_IP')]"
                    },
                    "virtualmachineName": {
                        "value": "[variables('resourceNames').virtualmachine]"
                    },
                    "virtualNetworkName": {
                        "value": "[variables('resourceNames').virtualNetwork]"
                    },
                    "sql_SubnetName": {
                        "value": "[parameters('sql_SubnetName')]"
                    },
                    "vnetResourceGroup": {
                        "value": "[variables('resourceNames').commonResourceGroup]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('virtualMachineSize')]"
                    },
                    "StorageAccountType": {
                        "value": "[variables('StorageAccountType')]"
                    },
                    "StorageAccountName": {
                        "value": "[variables('resourceNames').StorageAccount]"
                    },
                    "numberOfDataDisks": {
                        "value": "[parameters('numberOfDataDisks')]"
                    },
                    "DataDiskSize": {
                        "value": "[parameters('DataDiskSize')]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "DomainAdminUserName": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminUserName')]"
                        }
                    },
                    "DomainAdminPassword": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminPassword')]"
                        }
                    },
                    "omsWorkspaceResourceGroup": {
                        "value": "[variables('resourceNames').commonResourceGroup]"
                    },
                    "omsWorkspaceName": {
                        "value": "[variables('resourceNames').loganalyticsWorkspace]"
                    },
                    "sqlCustom_ScriptFilePath": {
                        "value": "[variables('TemplateURLs').CustomScriptExtensionScriptFilePath]"
                    },
                    "uai": {
                        "value": "[variables('uai')]"
                    },
                    "SupportEmail": {
                        "value": "[parameters('SupportEmail')]"
                    },
                    "Environment_Category": {
                        "value": "[parameters('Environment_Category')]"
                    }
                }
            }
        }
    ]
}